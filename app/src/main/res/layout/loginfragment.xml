<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:background="@drawable/loginbackground"
                                             android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="352dp"
            android:layout_height="174dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="#ffffff"
            app:layout_constraintVertical_bias="0.509" android:id="@+id/relativeLayout">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:ems="10"
                android:fontFamily="@font/caviar"
                tools:layout_editor_absoluteY="175dp" tools:layout_editor_absoluteX="84dp" android:id="@+id/editText"
                android:hint="Email" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:ems="10"
                android:fontFamily="@font/caviar"
                tools:layout_editor_absoluteY="247dp" tools:layout_editor_absoluteX="83dp" android:id="@+id/editText2"
                android:hint="Password" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
                android:layout_marginBottom="28dp"/>
    </RelativeLayout>
    <Button
            android:text="Log in"
            android:layout_width="352dp"
            android:layout_height="59dp"
            android:textColor="#ffffff"
            android:background="#2BA43A"
            android:fontFamily="@font/caviar"
            android:id="@+id/button" android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="111dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"/>
    <TextView
            android:text="Nature Tracker"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:fontFamily="@font/love"
            android:textColor="#ffffff"
            android:onClick="onClick"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="73dp" app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="1.0" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.502"/>
</android.support.constraint.ConstraintLayout>
