<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginsignupbackground"
        tools:context=".loginsignup">

    <Button
            android:text="Login"
            android:layout_width="198dp"
            android:layout_height="58dp"
            android:id="@+id/login"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="93dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="93dp"
            android:background="@drawable/whiteroundedbackground"
            android:layout_marginTop="368dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="SIGN UP"
            android:layout_width="198dp"
            android:layout_height="56dp"
            android:id="@+id/signup" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/login" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="93dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="93dp"
            android:background="@drawable/whiteroundedbackground"
    />
    <Button
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:id="@+id/nologin" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="65dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:textColor="#ffffff"
            android:background="@drawable/transparentbackground"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/signup" android:text="Continue without signing in"/>
    <TextView
            android:text="Welcome to Nature Tracker"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:fontFamily="@font/love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="163dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="70dp" app:layout_constraintBottom_toTopOf="@+id/login"/>
    <ImageView
            android:layout_width="192dp"
            android:layout_height="183dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="49dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/fragment">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>