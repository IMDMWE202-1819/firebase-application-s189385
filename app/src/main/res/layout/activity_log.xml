<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#2874A6"
        android:layout_height="match_parent"
        tools:context=".log">

    <EditText
            android:layout_width="284dp"
            android:layout_height="67dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:fontFamily="@font/caviar"
            android:id="@+id/descriptiontext"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:hint="Description" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="215dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginBottom="399dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6"/>

    <Button
            android:text="Log Item"
            android:layout_width="324dp"
            android:layout_height="99dp"
            android:fontFamily="@font/caviar"
            android:textSize="25dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#2BA43A"
            android:layout_marginTop="41dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.67" app:layout_constraintHorizontal_bias="0.494"
            android:id="@+id/logitem"/>

</android.support.constraint.ConstraintLayout>