<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#2874A6"
        android:layout_height="match_parent"
        tools:context=".option">

    <Button
            android:text="Log an item"
            android:layout_width="324dp"
            android:layout_height="99dp"
            android:fontFamily="@font/caviar"
            android:textSize="25dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#2BA43A"
            android:layout_marginTop="41dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.31" app:layout_constraintHorizontal_bias="0.505"
            android:id="@+id/logbutton"/>
    <Button
            android:text="Look at logged items"
            android:layout_width="324dp"
            android:layout_height="99dp"
            android:fontFamily="@font/caviar"
            android:textSize="25dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#2BA43A"
            android:layout_marginTop="41dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.56"
            android:id="@+id/lookbutton"/>
</android.support.constraint.ConstraintLayout>