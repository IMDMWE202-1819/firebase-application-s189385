<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#2874A6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Log in"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caviar"
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/loginbtn"
            android:onClick="print"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#2BA43A"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="Sign up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signupnav" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="175dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/loginbtn" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Forgot password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgottenpassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="175dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/loginbtn" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.25"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="324dp"
            android:background="#ffffff"
            android:layout_height="204dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/loginbtn"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:fontFamily="@font/caviar"
                android:id="@+id/inputlogin" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="85dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent" android:hint="Email"
                app:layout_constraintVertical_bias="0.314"
                android:layout_alignParentTop="true" app:layout_constraintHorizontal_bias="0.51"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:fontFamily="@font/caviar"
                android:ems="10"
                android:textColor="#000000"
                android:id="@+id/inputpassword"
                android:textColorHint="#000000"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/inputlogin" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="85dp"
                app:layout_constraintBottom_toBottomOf="parent" android:hint="Password"
                app:layout_constraintVertical_bias="0.561" android:singleLine="false"
                android:selectAllOnFocus="false" android:layout_alignParentTop="true"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>